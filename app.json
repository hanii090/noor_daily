{
  "expo": {
    "name": "Noor Daily - Quran & Hadith",
    "slug": "noor-daily",
    "version": "1.0.0",
    "description": "Daily Quran verses & Hadith matched to your mood. AI-powered Tafsir, 30-Day Spiritual Journey, Student Exam Mode, 99 Names of Allah, audio recitation, and beautiful shareable cards. Your daily Islamic companion.",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F3F2E3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noordaily.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save and share verse cards.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save verse cards to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.noordaily.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F3F2E3"
      },
      "permissions": [
        "NOTIFICATIONS",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#8B5CF6",
          "sounds": []
        }
      ],
      "expo-font"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#8B5CF6",
      "androidMode": "default"
    },
    "extra": {
      "eas": {
        "projectId": "c2c6ebae-dcf3-4631-a6cd-5164956ee2e0"
      },
      "aiProxyUrl": "https://us-central1-noor-fd44d.cloudfunctions.net/aiProxy"
    }
  }
}
